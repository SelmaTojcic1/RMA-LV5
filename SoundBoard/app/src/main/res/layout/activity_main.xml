<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ib_airplane"
        android:layout_height="150dp"
        android:layout_width="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/airplane"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:background="@null" />

    <ImageButton
        android:id="@+id/ib_locomotive"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_airplane"
        app:layout_constraintBottom_toTopOf="@id/ib_motorcycle"
        android:src="@drawable/locomotive"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:background="@null" />

    <ImageButton
        android:id="@+id/ib_motorcycle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_locomotive"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/motorcycle"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:background="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>